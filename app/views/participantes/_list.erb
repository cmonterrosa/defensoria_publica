<!-- arbol -->
<h3><%=link_to 'INICIO', {:controller => "home", :action => "index"}, :class => "arbol"-%> >> <%=link_to 'TRAMITES', {:controller => "tramites", :action => "index"}, :class => "arbol"-%> >> <%=link_to 'MENU', {:controller => "tramites", :action => "menu", :id => @tramite}, :class => "arbol"-%> >> PARTICIPANTES DEL TRÁMITE</h3>


<% form_tag({:action => "search", :t => @tramite}, {:class => "search"}) do -%>
  <p>
    <%= text_field_tag :search, params[:search], :limit => 90, :placeholder => "Escriba el nombre del participante" %>
    <%= submit_tag "Buscar", :name => nil %>
  </p>
<% end %>


<!-- contenido -->
<div id="divlista">
    <table width="85%" border="0" cellspacing="0" cellpadding="0" class="tablakolaval" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
    <tr>
      <td style="vertical-align: middle;">Papel</td>
       <td style="vertical-align: middle;">Nombre completo</td>
       <td style="vertical-align: middle;" colspan="4">&nbsp;</td>
    </tr>
    <%@participantes.each do |p|%>
    <tr>
      <td style="vertical-align: middle;"><%=(p.papel) ? p.papel.descripcion : "--"%></td>
      <td style="vertical-align: middle;"><%=(p.persona) ? p.persona.nombre_completo : "--"%></td>
      <td style="vertical-align: middle;"><%=link_to "Detalle", {:action => "show", :p =>p.persona}, :class => 'boton'  -%></td>
     <td style="vertical-align: middle;"><%=link_to "Editar", {:action => "new_or_edit", :id => p}, :class => 'boton'  -%></td>
     <td style="vertical-align: middle;"><%=link_to "Eliminar", {:action => "destroy", :id => p, :t => @tramite}, :confirm => '¿Desea eliminar el registro?', :class => 'boton'  -%></td>
    </tr>
    <%end%>
  </table>
</div>


<br /><%=link_to "NUEVO PARTICIPANTE", {:action => "new_or_edit", :t => @tramite}, :class => 'boton'  -%>



