<div class="grid-6-12">
  <div class="grid-8-12">
    <label><b>¿ES PRIVADO O PARTICULAR?: </b></label>
  </div>
  <div class="grid-4-12">
    <span class="InputGroup">
     <label class="uper">SI <%= radio_button :participante, :particular, "SI", :checked => @particular %></label>&nbsp;&nbsp;
     <label class="uper">NO <%= radio_button :participante, :particular, "NO", :checked => @particular == false %></label>
    </span>
  </div>
</div>


<div class="grid-6-12">
  <div class="grid-6-12">
    <label><b>FECHA DE NACIMIENTO: </b><em class="formee-req">*</em></label>
  </div>
  <div class="grid-6-12"><%=text_field :participante, :fecha_nac%></div>
</div>

<div class="grid-6-12">
  <div class="grid-6-12">
    <label><b>ESTADO CIVIL: </b><em class="formee-req">*</em></label>
  </div>
  <div class="grid-6-12">
    <%=select(:participante, :estado_civil_id, @edo_civil.collect {|p| [ p.descripcion, p.id ] }, { :include_blank => true })%>
  </div>
</div>

<div class="grid-6-12">
  <div class="grid-6-12">
    <label><b>OCUPACIÓN: </b><em class="formee-req">*</em></label>
  </div>
  <div class="grid-6-12"><%=text_field :participante, :ocupacion%></div>
</div>

<div class="grid-6-12">
  <div class="grid-6-12">
    <label><b>LUGAR DE TRABAJO: </b><em class="formee-req">*</em></label>
  </div>
  <div class="grid-6-12"><%=text_field :participante, :fechahora_captura%></div>
</div>

<div class="grid-6-12">
  <div class="grid-6-12">
  <label><b>ANTECEDENTES PENALES: </b><em class="formee-req">*</em></label>
  </div>
  <div class="grid-6-12"><%=text_field :participante, :antecedentes_penales_delito%></div>
</div>

