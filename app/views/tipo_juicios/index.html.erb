<%=render :partial => "home/arbol"%>

<div id="divlista">
 <table width="65%" border="0" cellspacing="0" cellpadding="0" class="tablakolaval" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
   <tr>
     <th> Materia</th>
     <th> Descripción</th>
     <th colspan="2"> Acciones</th>
   </tr>

<% @tipo_juicios.each do |tipo_juicio| %>
  <tr>
    <td><%=h (tipo_juicio.materia)? tipo_juicio.materia.descripcion : "-"%></td>
    <td><%=h tipo_juicio.descripcion %></td>
    <td><%= link_to 'Editar', edit_tipo_juicio_path(tipo_juicio), :class => "boton" %></td>
    <td><%= link_to 'Eliminar', tipo_juicio, :confirm => '¿Está seguro que desea eliminarlo?', :method => :delete, :class => "boton" %></td>
  </tr>
<% end %>
</table>
</div>
