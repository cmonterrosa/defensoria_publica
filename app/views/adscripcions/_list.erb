<%=render :partial => "home/arbol"%>

<%@label_busqueda = "ADSCRIPCIONES"%>
<%= render :partial => "home/barra_busqueda" %>


<!-- contenido -->
<div id="divlista">
    <table width="85%" border="0" cellspacing="0" cellpadding="0" class="tablakolaval" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
    <tr>
       <td style="vertical-align: middle;">Clave</td>
       <td style="vertical-align: middle;">Descripción</td>
       <td style="vertical-align: middle;" colspan="4">&nbsp;</td>
    </tr>
    <%@adscripcions.each do |a|%>
    <tr>
      <td style="vertical-align: middle;"><%=(a.clave) ? a.clave : "--"%></td>
     <td style="vertical-align: middle;"><%=(a.descripcion) ? a.descripcion : "--"%></td>
     <td style="vertical-align: middle;"><%=link_to "Usuarios", {:controller => 'admin', :id =>a, :action => "users_by_adscripcion"}, :class => 'boton'  -%></td>
     <td style="vertical-align: middle;"><%=link_to "Editar", {:action => "edit", :id => a}, :class => 'boton'  -%></td>
     <td style="vertical-align: middle;"><%=link_to "Eliminar", {:action => "destroy", :id => a}, :confirm => '¿Desea eliminar el registro?', :class => 'boton'  -%></td>
    </tr>
    <%end%>
  </table>
</div>

<br />
<table>
    <tr align="center" >
      <td colspan="5" style="padding: 0;">
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @adscripcions %>
          </div>
          <%= will_paginate @adscripcions %>
        </div>
      </td>
    </tr>
</table>


