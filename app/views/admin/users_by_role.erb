<!-- arbol -->
<h3><%=link_to 'INICIO', {:controller => "home", :action => "index"}, :class => "arbol"-%> >> <%=link_to 'ADMINISTRACION', {:controller => "admin", :action => "index"}, :class => "arbol"-%> >> <%=link_to 'ROLES', {:controller => "admin", :action => "roles_index"}, :class => "arbol"-%> >> <%=h @role.name%> </h3>

<div id="scroll">
      <table class="tablakolaval" width="90%" border="0" cellspacing="2" cellpadding="0" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
                <tr align="center" class="d0">
                  <td width="5%" bgcolor="#E8E8E8">NP</td>
                  <td width="15%" bgcolor="#E8E8E8">USUARIO</td>
                  <td width="40%" bgcolor="#E8E8E8">NOMBRE COMPLETO</td>
                  <td width="40%" bgcolor="#E8E8E8" colspan="3">ACCIÓN</td>
                </tr>
            <!-- Registros -->
            <%contador=1%>
            <% for usuario in @role.users.sort{|p1,p2| p1.nombre_completo <=> p2.nombre_completo} %>
               <tr align="center" class="d1">
                 <td><%=h contador%></td>

                  <td>
                      <%=usuario.login%>
                  </td>
                  <td>
                     <%=usuario.nombre_completo%>
                  </td>
                  <td>
                      <%= button_to 'Quitar', { :action => 'delete_user', :controller => "admin", :id => usuario, :role => @role}, :confirm => '¿Esta seguro?', :method => :post %>
                  </td>
                </tr>
                <%contador+=1%>
              <%end%>
       </table>
</div><br /><br /><br />


<div id="scroll">
<% form_tag :action => 'add_user', :role =>@role do -%>
<table class="sample" width="50%" border="0" cellspacing="2" cellpadding="0" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
          <th colspan="2">
              Agregar Usuario
          </th>
      </tr>

      <tr class="d1">
          <th><%= collection_select("user", "user_id", @users, :id, :nombre_completo, :prompt => '>> Seleccione usuario')    %></th>
          <th class="boton"><%= submit_tag "Agregar", :onclick => "return comprobar();" %></th>
      </tr>
</table>
<% end %>
</div>


