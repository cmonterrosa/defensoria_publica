<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>

<% form_for :user, @user, :url => { :action => "save_user", :id => @user.id } do |f| -%>
  <table width="100%" border="0" align="center" cellpadding="2" cellspacing="1">
    <tr bgcolor="#CCCCCC" class="titulo">
      <td colspan="3" align="center" >EDITAR USUARIO</td>
    </tr>
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4">DATOS GENERALES</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Login</td>
          <td align="center">Nombre</td>
          <td align="center">Apellido Paterno</td>
          <td align="center">Apellido Materno</td>
        </tr>
        <tr>
          <td align="center"><%= f.text_field :login, :disabled => true%> <div id="mensaje"></div></td>
          <td align="center"><%= f.text_field :nombre,  :required => true%></td>
          <td align="center"><%= f.text_field :paterno,  :required => true%></td>
          <td align="center"><%= f.text_field :materno%></td>
        </tr>
      </table></td>
    </tr>
    <!-- segunda barra inferior -->
      <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" ></td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Área a la que pertenece</td>
          <td align="center">Correo electrónico</td>
          <td align="center">Domicilio Particular</td>
          <td align="center">Teléfono Celular</td>
        </tr>
        <tr>
          <td align="center"> <%= f.select :subdireccion_id, Subdireccion.all.collect{|a| [a.descripcion, a.id]}, :prompt => 'Seleccione una opción'%></td>
          <td align="center"><%=f.text_field :email, :required => true%></td>
          <td align="center"><%= f.text_field :direccion%></td>
          <td align="center"><%= f.text_field :tel_celular%></td>
        </tr>
      </table></td>
     </tr>
     <!-- barra inferior -->
       <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" >&nbsp;</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Sexo</td>
          <td align="center">Categoría</td>
          <td align="center">Contraseña</td>
          <td align="center">Confirmación de la contraseña</td>
       </tr>
        <tr>
          <td align="center"><%= f.select :sexo, { "Femenino" => "F", "Masculino" => "M"}, :include_blank => true, :selected => @user.sexo %></td>
          <td align="center"><%= f.text_field :categoria %></td>
          <td align="center"><%= f.password_field :password %></td>
          <td align="center"><%= f.password_field :password_confirmation %></td>
        </tr>
      </table></td>
     </tr>

    <!-- espacio -->
    <tr>
      <td colspan="3"><hr /></td>
    </tr>
    <!-- FOOTER -->
    <tr>
      <td align="right">
        <table>
          <tr>
            <td>
              <input title="guardar y regresar" alt=" Guardar y regresar a la sección anterior " type="image"  src="/images/botones/btn_guardar.png" width="150" height="40" style="margin-left:90px;"/>
            </td>
            <td>
              <%= link_to image_tag("botones/btn_regresar.png", :width => 170, :height=>"40", :border =>0, :style => "margin-left:90px;" ) ,  :controller => "admin"-%>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>




