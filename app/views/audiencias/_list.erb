<% form_tag :action => "search", :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], :limit => 60, :placeholder => "Escriba el nombre del solicitante" %>
    <%= submit_tag "Buscar", :name => nil %>
  </p>
<% end %>



