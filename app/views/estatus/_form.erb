
<div class="container">
  <% form_for :estatu, @estatu, :url => { :action => "create"}, :html => {:class => "formee"} do |f| %>
  <fieldset>

    <legend>&nbsp;REGISTRO&nbsp;DE&nbsp;ESTATUS&nbsp;</legend>
      <div class="grid-12-12">
          <%= error_messages_for :estatu %>
      </div>

      <div class="grid-3-12">
        <div class="grid-4-12">
            <label><b>CLAVE: </b><em class="formee-req">*</em></label>
        </div>
        <div class="grid-8-12"> <%= f.text_field :clave, :placeholder => "6 caracteres máximo" %></div>
      </div>

       <div class="grid-5-12">
        <div class="grid-4-12">
            <label><b>DESCRIPCION: </b><em class="formee-req">*</em></label>
        </div>
        <div class="grid-8-12"> <%= f.text_field :descripcion, :placeholder => "Anote la descripción" %></div>
      </div>

      <div class="grid-4-12">
        <div class="grid-10-12">
            <label><b>¿CONCLUYE EL TRAMITE?: </b><em class="formee-req">*</em></label>
        </div>
        <div class="grid-2-12"> <%= f.check_box :concluido %></div>
      </div>

      <div class="grid-form-login">
        <input class="right" type="submit" title="GUARDAR" value="GUARDAR" />
      </div>
</fieldset>
 <%end%>
</div>

<!-- Validaciones -->
<script type="text/javascript">
  var clave = new LiveValidation( 'estatu_clave', {onlyOnSubmit: true} );
  var descripcion = new LiveValidation( 'estatu_descripcion', {onlyOnSubmit: true} );
  clave.add( Validate.Presence );
  descripcion.add( Validate.Presence );
</script>